<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="entry"
            type="ca.rmen.android.poetassistant.main.dictionaries.dictionary.DictionaryEntry.DictionaryEntryDetails" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/word_type"
            style="?attr/textAppearanceListItem"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:paddingEnd="0dp"
            android:paddingStart="16dp"
            android:text="@{entry.partOfSpeech}"
            android:textStyle="bold"
            tools:text="v" />

        <ca.rmen.android.poetassistant.widget.CABTextView
            android:id="@+id/definition"
            style="?attr/textAppearanceListItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="0dp"
            android:paddingStart="16dp"
            android:text="@{entry.definition}"
            android:textIsSelectable="true"
            tools:text="happy" />

    </LinearLayout>
</layout>