<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="PREF_CATEGORY_VOICE"
        android:title="@string/pref_category_voice">

        <!--suppress AndroidElementNotAllowed -->
        <ca.rmen.android.poetassistant.settings.VoicePreference
            android:defaultValue="VOICE_SYSTEM"
            android:icon="@drawable/ic_settings_voice"
            android:key="PREF_VOICE"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:summary="@string/pref_voice_summary"
            android:title="@string/pref_voice_title"/>

        <!--suppress AndroidElementNotAllowed -->
        <SeekBarPreference
            android:defaultValue="100"
            android:key="PREF_VOICE_SPEED_V3"
            android:layout="@layout/preference_seekbar_fix"
            android:max="200"
            android:title="@string/pref_voice_speed_title"/>

        <!--suppress AndroidElementNotAllowed -->
        <SeekBarPreference
            android:defaultValue="100"
            android:key="PREF_VOICE_PITCH_V3"
            android:layout="@layout/preference_seekbar_fix"
            android:max="200"
            android:title="@string/pref_voice_pitch_title"/>

        <Preference
            android:icon="@drawable/ic_settings_preview"
            android:key="PREF_VOICE_PREVIEW"
            android:summary="@string/pref_voice_preview_summary"
            android:title="@string/pref_voice_preview_title"/>

        <Preference
            android:icon="@drawable/ic_settings_system_settings"
            android:key="PREF_SYSTEM_TTS_SETTINGS"
            android:summary="@string/pref_system_tts_settings_description"
            android:title="@string/pref_system_tts_settings_title">
            <intent android:action="com.android.settings.TTS_SETTINGS"/>
        </Preference>
    </PreferenceCategory>
    <PreferenceCategory
        android:key="PREF_CATEGORY_RHYMING"
        android:title="@string/pref_category_rhyming">


        <!--suppress AndroidElementNotAllowed -->
        <androidx.preference.SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="PREF_ALL_RHYMES_ENABLED"
            android:summary="@string/all_rhymes_setting_description"
            android:title="@string/all_rhymes_setting_title"/>

        <!--suppress AndroidElementNotAllowed -->
        <androidx.preference.SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="PREF_MATCH_AO_AA_ENABLED"
            android:summary="@string/match_ao_aa_setting_description"
            android:title="@string/match_ao_aa_setting_title"/>

        <!--suppress AndroidElementNotAllowed -->
        <androidx.preference.SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="PREF_MATCH_AOR_AO_ENABLED"
            android:summary="@string/match_aor_ao_setting_description"
            android:title="@string/match_aor_ao_setting_title"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:key="PREF_CATEGORY_THESAURUS"
        android:title="@string/pref_category_thesaurus">
        <!--suppress AndroidElementNotAllowed -->
        <androidx.preference.SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="PREF_THESAURUS_REVERSE_LOOKUP_ENABLED"
            android:summary="@string/thesaurus_reverse_lookup_setting_description"
            android:title="@string/thesaurus_reverse_lookup_setting_title"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:key="PREF_CATEGORY_UI"
        android:title="@string/pref_category_ui">

        <ListPreference
            android:defaultValue="Light"
            android:entries="@array/pref_theme_titles"
            android:entryValues="@array/pref_theme_values"
            android:icon="@drawable/ic_settings_theme"
            android:key="PREF_THEME"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:summary="@string/pref_theme_summary"
            android:title="@string/pref_theme_title"/>

        <ListPreference
            android:defaultValue="Efficient"
            android:entries="@array/pref_layout_titles"
            android:entryValues="@array/pref_layout_values"
            android:key="PREF_LAYOUT"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:summary="@string/pref_layout_summary"
            android:title="@string/pref_layout_title"/>

        <!--suppress AndroidElementNotAllowed -->
        <androidx.preference.SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="PREF_SELECTION_LOOKUP"
            android:summary="@string/pref_selection_lookup_summary"
            android:title="@string/pref_selection_lookup_title"/>

    </PreferenceCategory>
    <PreferenceCategory
        android:key="PREF_CATEGORY_NOTIFICATIONS"
        android:title="@string/pref_category_notifications">
        <!--suppress AndroidElementNotAllowed -->
        <androidx.preference.SwitchPreferenceCompat
            android:defaultValue="false"
            android:icon="@drawable/ic_settings_wotd"
            android:key="PREF_WOTD_ENABLED"
            android:summary="@string/wotd_setting_description"
            android:title="@string/wotd_setting_title"/>
        <ListPreference
            android:defaultValue="default"
            android:dependency="PREF_WOTD_ENABLED"
            android:dialogTitle="@string/wotd_setting_system_notification_priority_title"
            android:entries="@array/wotd_setting_system_notification_priority_labels"
            android:entryValues="@array/wotd_setting_system_notification_priority_values"
            android:icon="@drawable/ic_settings_notification_priority"
            android:key="PREF_WOTD_NOTIFICATION_PRIORITY"
            android:summary="@string/wotd_setting_system_notification_priority_summary"
            android:title="@string/wotd_setting_system_notification_priority_title"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:key="PREF_CATEGORY_USER_DATA"
        android:title="@string/pref_category_user_data">
        <Preference
            android:icon="@drawable/ic_settings_export_favorites"
            android:key="PREF_EXPORT_FAVORITES"
            android:title="@string/action_export_favorites"/>
        <Preference
            android:icon="@drawable/ic_settings_import_favorites"
            android:key="PREF_IMPORT_FAVORITES"
            android:title="@string/action_import_favorites"/>
        <Preference
            android:icon="@drawable/ic_settings_clear_search_history"
            android:key="PREF_CLEAR_SEARCH_HISTORY"
            android:title="@string/action_clear_search_history"/>
    </PreferenceCategory>

</PreferenceScreen>
